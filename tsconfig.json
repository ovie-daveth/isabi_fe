{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",  // Set the base URL to root
    "paths": {
      "@/*": ["src/*"]  // Map '@' to the 'src' folder
    }
  },
  "include": ["src/**/*", "src/global.d.ts"]
}
